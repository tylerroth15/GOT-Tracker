<div class="container">
    <div class="row">
        <h2 class="member-name">Characters</h2>    
    </div>
    <hr> 
    <div class='col-md-12'>
        {{#each characters}}
                <div class ='form-group row'>
                    <h4>{{ person }}:</h4>
    </div>           
    <div class='column col-md-3'>   
                    <div class='form-field form-group row col-xs-2'>
                        <label for='colorFilter ex1' class='dropdownLabel is_alive'>Alive or Dead</label>
                        <select id='colorFilter ex1' class='form-control'>
                        <option>Alive</option>
                        <option>Dead</option>
                        </select>
                        
                </div>
    </div>
    <div class='column col-md-3'>
                <div class='form-field form-group row col-xs-2 '>
                    <label for='colorFilter' class='dropdownLabel house'>House</label>
                    <select id='colorFilter' class='form-control'>
                        <option>Select a House</option>
                        <option>Stark</option>
                        <option>Lannister</option>
                        <option>Baratheon of Kings Landing</option>
                        <option>Baratheon of Dragonstone</option>
                        <option>Tyrell</option>
                        <option>Targaryen</option>
                        <option>Martell</option>
                    </select>
                </div>  
    </div>
        <div class='column col-md-3'>   
                    <div class='form-field form-group row col-xs-2'>
                        <label for='colorFilter ex1' class='dropdownLabel is_alive'>Title</label>
                        <input type="text" class="form-control form-control-md" name="uname1" id="uname1"> 
                </div>
    </div>
        <div class='column col-md-3'>   
                <div class='form-field form-group row col-xs-2'>
                        <label for='colorFilter ex1' class='dropdownLabel is_alive'>Loyalty</label>
                        <input type="text" class="form-control form-control-md" name="uname1" id="uname1"> 
                </div>
    </div>
    <button type="button" class="btn btn-primary">Update Character</button>
    <br>
    <br>
        {{/each}}
        </div>
        
        
</div>

